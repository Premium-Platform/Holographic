{
  "name": "holographic",
  "version": "0.1.0",
  "description": "一套基于TailwindCSS的现代全息风格组件库，支持Vue和React",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "dev:vue": "vite -c examples/vue/vite.config.ts",
    "build": "vite build",
    "build:vue": "vite build --config vite.config.vue.ts",
    "build:react": "vite build --config vite.config.react.ts",
    "preview": "vite preview",
    "test": "vitest run",
    "lint": "eslint . --ext .ts,.vue,.tsx,.jsx",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:serve": "vitepress serve docs"
  },
  "keywords": [
    "vue",
    "react",
    "tailwindcss",
    "component-library",
    "holographic",
    "ui"
  ],
  "author": "",
  "license": "MIT",
  "peerDependencies": {
    "react": "^17.0.0 || ^18.0.0",
    "react-dom": "^17.0.0 || ^18.0.0",
    "tailwindcss": "^3.0.0",
    "vue": "^3.3.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.5",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^6.19.1",
    "@typescript-eslint/parser": "^6.19.1",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitejs/plugin-vue": "^5.0.3",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.56.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-vue": "^9.20.1",
    "postcss": "^8.4.33",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3",
    "vite": "^6.2.2",
    "vite-plugin-dts": "^4.5.3",
    "vitepress": "^1.6.3",
    "vitest": "^3.0.9",
    "vue": "^3.4.1",
    "vue-i18n": "^12.0.0-alpha.1"
  },
  "dependencies": {
    "@heroicons/vue": "^2.1.1",
    "vue-router": "^4.5.0"
  }
}
